@model IEnumerable<LibrarySystemApplication.Models.Books.Book>

<div class="card shadow-sm border-0">
    <div class="card-header bg-secondary text-white fw-bold">
        <i class="bi bi-journals me-2"></i> Books List
    </div>
    <div class="table-responsive">
        <table class="table align-middle table-hover mb-0">
            <thead class="table-light text-center">
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Year</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-semibold">@item.Title</td>
                        <td>@item.Isbn</td>
                        <td>@item.Author</td>
                        <td>@item.Publisher</td>
                        <td>@item.PublishYear</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
<nav class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a href="#" class="page-link" data-page="@(ViewBag.CurrentPage - 1)">
                <i class="bi bi-chevron-left"></i> Previous
            </a>
        </li>

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a href="#" class="page-link" data-page="@i">@i</a>
            </li>
        }

        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a href="#" class="page-link" data-page="@(ViewBag.CurrentPage + 1)">
                Next <i class="bi bi-chevron-right"></i>
            </a>
        </li>
    </ul>
</nav>