@using Microsoft.AspNetCore.Identity
@inject UserManager<LibrarySystemApplication.Models.Account.Member> UserManager
@inject SignInManager<LibrarySystemApplication.Models.Account.Member> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/custom/utilities.css" rel="stylesheet" />
    <link href="~/css/custom/components.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/LibrarySystemApplication.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Roboto:wght@100..900&display=swap"
        rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">.LIB</a>

                <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        @* Guest nav *@
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                    }

                </ul>
            </div>
        </nav>
    </header>

    <div>
        <div>
            <main role="main">
                @RenderBody()
            </main>

            @if (SignInManager.IsSignedIn(User))
            {
                <div>
                    <aside>@Html.Partial("_SharedDashboard")</aside>
                </div>
            }

        </div>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - LibrarySystemApplication -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>