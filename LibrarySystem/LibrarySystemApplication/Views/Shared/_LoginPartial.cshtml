@using LibrarySystemApplication.Models.Account.Control
@model Login


<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Welcome to the .Lib!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email address</label>
                        <div class="input-group">
                            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                            <span asp-validation-for="Email" class="input-group-text">

                            </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <input asp-for="Password" type="password" class="form-control"
                                placeholder="Enter your password">
                            <span asp-validation-for="Password" class="input-group-text password-toggle">

                            </span>
                        </div>
                    </div>

                    <div class="form-check">
                        <div>
                            <label class="form-check-label">
                                <input asp-for="RememberMe" class="form-check-input" /> @Html.DisplayName("Remember me")
                            </label>
                        </div>
                        <a href="#" class="text-decoration-none">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-login btn-primary text-white m-2">Sign In</button>

                    <div class="divider">
                        <span>or continue with</span>
                    </div>

                    @* <div class="social-login">
                        <button type="button" class="btn btn-social">
                            <i class="fab fa-google"></i>Google
                        </button>
                        <button type="button" class="btn btn-social">
                            <i class="fab fa-facebook-f"></i>Facebook
                        </button>
                    </div> *@

                    <div class="register-link">
                        Don't have an account?
                        <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#registerModal"
                            data-bs-dismiss="modal">Register here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (TempData["LoginError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["LoginError"]
        </div>
    }

</div>