@model IEnumerable<LibrarySystemApplication.Models.Books.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container">
    <h1>Books</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Add New Book</a>
    </p>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped align-middle container">
    <thead class="table-light">
        <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Year</th>

            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 80px;">
                    <img src="@(string.IsNullOrEmpty(item.CoverUrl) ? "https://placehold.co/60x90" : item.CoverUrl)"
                        class="img-thumbnail" style="max-height: 90px;" alt="@item.Title" />
                </td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.PublishYear</td>

                <td>
                    @if (item.IsAvailable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>