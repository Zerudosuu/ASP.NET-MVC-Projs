@using LibrarySystemApplication.Models.Books
@model IEnumerable<Book>

@{
    ViewData["Title"] = "Manage Books";
}


<div class="container">

    <h1 class="mt-3">Manage Books</h1>
    <button class="btn btn-primary my-3" asp-action="Create">
        <i class="bi bi-plus-lg"></i>
       Add new book
    </button>
    <!-- Table View -->
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Isbn)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.Publisher)</th>
                <th>@Html.DisplayNameFor(model => model.PublishYear)</th>
                @* <th>@Html.DisplayNameFor(model => model.Categories)</th> *@
                @* <th>@Html.DisplayNameFor(model => model.Language)</th> *@
                @* <th>@Html.DisplayNameFor(model => model.DateAdded)</th> *@
                @* <th>@Html.DisplayNameFor(model => model.IsAvailable)</th> *@
                @* <th>@Html.DisplayNameFor(model => model.TotalCopies)</th> *@
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Title)</td>
                <td>@Html.DisplayFor(m => item.Isbn)</td>
                <td>@Html.DisplayFor(m => item.Author)</td>
                <td>@Html.DisplayFor(m => item.Publisher)</td>
                <td>@Html.DisplayFor(m => item.PublishYear)</td>
                @* <td>@string.Join(", ", item.Categories)</td> *@
                @* <td>@Html.DisplayFor(m => item.Language)</td> *@
                @* <td>@item.DateAdded.ToShortDateString()</td> *@
                @* <td>@(item.IsAvailable ? "Available" : "Not Available")</td> *@
                @* <td>@Html.DisplayFor(m => item.TotalCopies)</td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookId">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

  

</div>
