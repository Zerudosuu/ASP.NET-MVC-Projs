@model IEnumerable<LibrarySystemApplication.Models.Books.Book>

<div class="container my-5">
    <h2 class="fw-bold mb-4 text-center">ðŸ“š Book Collection</h2>

    <div class="row g-4">
        @foreach (var book in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@book.CoverUrl" class="card-img-top" alt="@book.Title"
                        style="height: 250px; object-fit: cover; border-radius: 0.5rem;">

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@book.Title</h5>
                        <p class="text-muted small mb-1">by @book.Author</p>
                        <p class="small mb-2"><strong>Publisher:</strong> @book.Publisher</p>

                        <div class="mt-auto">
                            @foreach (var category in book.Categories.Take(3))
                            {
                                <span class="badge bg-secondary me-1">@category</span>
                            }
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        @if (book.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Unavailable</span>
                        }
                    </div>
                    <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#bookModal"
                        data-id="@book.BookId">
                        View Details
                    </button>
                </div>
            </div>
        }
    </div>
</div>
